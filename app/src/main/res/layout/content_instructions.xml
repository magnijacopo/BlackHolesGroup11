<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="it.polimi.group11.InstructionsActivity"
    tools:showIn="@layout/activity_instructions"
    android:background="@drawable/background_instructions">

        <Button
            android:layout_width="45dp"
            android:layout_height="30dp"
            android:id="@+id/button_ita"
            android:layout_alignBottom="@+id/button_back_home"
            android:layout_alignParentEnd="true"
            android:onClick="changeLanguageIta"
            android:background="@drawable/italian" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_back_home"
            android:onClick="goToMainActivity"
            android:textColor="#ffffff"
            android:background="#00ffffff"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewInstructions"
            android:textColor="#ffffff"
            android:textSize="18sp"
            android:gravity="center_vertical"
            android:layout_marginTop="100dp"
            android:layout_centerHorizontal="true"
            android:scrollbars="vertical"
            android:maxLines="30"
            android:scrollbarAlwaysDrawVerticalTrack="true"/>

        <Button
            android:layout_width="45dp"
            android:layout_height="30dp"
            android:id="@+id/button_eng"
            android:onClick="changeLanguageEng"
            android:textColor="#ffffff"
            android:layout_alignTop="@+id/button_ita"
            android:layout_toStartOf="@+id/button_ita"
            android:layout_marginRight="15dp"
            android:background="@drawable/uk" />

</RelativeLayout>
