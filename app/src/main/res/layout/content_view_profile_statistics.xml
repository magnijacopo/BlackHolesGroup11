<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="it.polimi.group11.ViewProfileStatistics"
    tools:showIn="@layout/activity_view_profile_statistics"
    android:background="@drawable/profile_statistics_background">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/delete_profile_button"
        android:id="@+id/buttonDeleteProfile"
        android:onClick="showAlert"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:textColor="#ffffff"
        android:background="#00ffffff" />

    <TextView
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:ems="10"
        android:id="@+id/TextViewProfileName"
        android:visibility="visible"
        android:textIsSelectable="false"
        android:textColor="#ffffff"
        android:textSize="25sp"
        android:layout_below="@+id/buttonMatch"
        android:layout_centerHorizontal="true" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_alignParentEnd="false"
        android:id="@+id/linearLayout"
        android:layout_marginTop="200dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="190dp"
            android:id="@+id/scrollView"
            android:layout_above="@+id/linearLayout"
            android:layout_centerHorizontal="true" >

            <ListView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/listViewMatches" />
        </ScrollView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PROVA "
            android:id="@+id/textViewMatchPlayed"
            android:textColor="#ffffff" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PROVA "
            android:id="@+id/textViewMatchWon"
            android:textColor="#ffffff" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PROVA "
            android:id="@+id/textViewMinNumberMoves"
            android:textColor="#ffffff" />
    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MatchStatistics"
        android:id="@+id/buttonMatch"
        android:onClick="goToMatchStatistics"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/buttonDeleteProfile" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_back_home"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:background="#00ffffff" />


</RelativeLayout>
